    <div class="container">
        <div class="slides-3 swiper swiper-initialized swiper-horizontal swiper-pointer-events aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
    <h1>Documents in the collection:</h1>
    <div class="user-boxes">
      <% documents.forEach(function(document, index) { %>
        <div class="user-box">
          
          <h2>Name: <%= document.firstName%><%= document.lastName%></h2>
          <p>Phone: <%= document.phone %></p>
          <div class="user-details">
            <p>Email: <%= document.email %></p>
            <p>Aadhar: <%= document.aadhar %></p>
            <p>Date of Birth: <%= document.dob %></p>
            <p>State: <%= document.state %></p>
            <p>City: <%= document.city %></p>
            <p>Pincode: <%= document.pincode %></p>
            <p>Digital Sign Path: <%= document.digitalSignPath %></p>
            <p>Aadhar Sign Path: <%= document.aadharSignPath %></p>
            <p>Reference Number: <%= document.referenceNumber %></p>
          </div>
          <button class="submit-button" data-index="<%= index %>">VIEW</button>
