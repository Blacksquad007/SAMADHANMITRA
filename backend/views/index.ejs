    <style>
        h1 {
            font-size: 24px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            margin-bottom: 5px;
        }

        .user-boxes {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .user-box {
            width: 25%;
            padding: 10px;
            border: 1px solid #ccc;
            margin-bottom: 10px;
        }

        .user-box h2 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .user-details {
            font-size: 14px;
            display: none; /* Initially hide the details */
        }

        .view-button,
        .accept-button {
            background-color: #01b399;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .view-button {
            margin-bottom: 10px;
        }

        .accept-button {
            background-color: #01b399;
            color: #fff;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .proffilee {
            width: 80px;
            height: 80px;
            padding: 20px;
        }

        .user-box:hover {
            transform: translateX(10px);
        }

        .user-box:hover .user-details {
            opacity: 1;
            visibility: visible;
        }

        .close-button {
            float: right;
            cursor: pointer;
        }

        .popup {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 100;
            display: none;
        }

        .popup-content {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
        }
    </style>
</head>

