<script>
  
  $(document).ready(function () {
      $('.submit-button').click(function () {
          // Toggle the visibility of user details for the clicked item
          $(this).siblings('.user-details').slideToggle();
      });

      $('.accept-button').click(function () {
          // Remove the user box when "ACCEPT" is clicked
          $(this).closest('.user-box').remove();
      });
  });
</script>
